<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.SVGPath?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="450.0" spacing="20.0" styleClass="main-container" stylesheets="@ayarlar.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.mesajlasmauygulamasi.AyarlarController">

    <Label text="Hesap Ayarları" textFill="#430f86">
        <font>
            <Font name="Segoe UI Bold" size="24.0" />
        </font>
    </Label>

    <HBox alignment="CENTER_LEFT" spacing="25.0" style="-fx-padding: 0 0 10 0;">
        <StackPane styleClass="profile-container">
            <Circle radius="50.0" styleClass="profile-circle" />
            <SVGPath content="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" scaleX="2.8" scaleY="2.8" styleClass="profile-icon" />
        </StackPane>

        <VBox alignment="CENTER_LEFT" spacing="8">
            <Label text="Profil Görünümü" style="-fx-font-weight: bold; -fx-text-fill: #555; -fx-font-size: 14px;" />
            <Button styleClass="btn-action" text="Fotoğrafı Değiştir (Demo)" />
        </VBox>
    </HBox>

    <VBox spacing="5">
        <Label text="Kullanıcı Adı" styleClass="input-label"/>
        <TextField fx:id="usernameField" promptText="Adınızı girin" styleClass="input-field" />
    </VBox>

    <VBox spacing="5">
        <Label text="E-posta Adresi" styleClass="input-label"/>
        <TextField fx:id="emailField" promptText="E-posta adresini girin" styleClass="input-field" />
    </VBox>

    <VBox spacing="5">
        <Label text="Yeni Şifre" styleClass="input-label"/>
        <PasswordField fx:id="passwordField" promptText="Yeni şifre girin (İsteğe bağlı)" styleClass="input-field" />
    </VBox>

    <VBox spacing="5">
        <Label text="Şifre Tekrar" styleClass="input-label"/>
        <PasswordField fx:id="confirmPasswordField" promptText="Şifreyi onaylayın" styleClass="input-field" />
    </VBox>

    <HBox alignment="CENTER" spacing="15.0" style="-fx-padding: 20 0 0 0;">
        <Button fx:id="ayarlardan_geri" mnemonicParsing="false" onAction="#ayarlardan_geri_gel" styleClass="btn-cancel" text="İptal" />
        <Button mnemonicParsing="false" onAction="#bilgileriGuncelle" styleClass="btn-update" text="Değişiklikleri Kaydet" />
    </HBox>

    <Button onAction="#tumSohbetleriTemizle" styleClass="btn-danger-link" text="Tüm Sohbet Geçmişini Sil" />

</VBox>